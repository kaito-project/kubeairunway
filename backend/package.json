{
  "name": "@kubefoundry/backend",
  "version": "1.0.0",
  "description": "KubeFoundry Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc",
    "start": "bun src/index.ts",
    "embed": "bun scripts/embed-assets.ts",
    "precompile": "bun run embed",
    "compile": "bun run scripts/compile.ts",
    "compile:linux-x64": "bun run scripts/compile.ts --target=bun-linux-x64 --outfile=kubefoundry-linux-x64",
    "compile:linux-arm64": "bun run scripts/compile.ts --target=bun-linux-arm64 --outfile=kubefoundry-linux-arm64",
    "compile:darwin-x64": "bun run scripts/compile.ts --target=bun-darwin-x64 --outfile=kubefoundry-darwin-x64",
    "compile:darwin-arm64": "bun run scripts/compile.ts --target=bun-darwin-arm64 --outfile=kubefoundry-darwin-arm64",
    "compile:windows-x64": "bun run scripts/compile.ts --target=bun-windows-x64 --outfile=kubefoundry-windows-x64.exe",
    "lint": "eslint src --ext .ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@kubernetes/client-node": "^0.21.0",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.10.7",
    "js-yaml": "^4.1.1",
    "pino": "^10.1.0",
    "postgres": "^3.4.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "drizzle-kit": "^0.31.9",
    "eslint": "^8.56.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.3.3"
  }
}
